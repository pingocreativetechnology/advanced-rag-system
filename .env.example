# Advanced RAG Agent System Configuration
# Copy this file to .env and customize for your setup

# ============================================
# MODEL CONFIGURATION
# ============================================

# Primary Language Model (choose one)
DEFAULT_MODEL=mistral:7b
# DEFAULT_MODEL=llama3.2:3b
# DEFAULT_MODEL=llama3.2:1b
# DEFAULT_MODEL=llama3.1:8b-instruct-q4_K_M

# Embedding Model for Vector Search
EMBEDDING_MODEL=nomic-embed-text
# EMBEDDING_MODEL=all-minilm

# Agent Type Selection
USE_ENHANCED_AGENT=true
USE_SMART_RAG=true

# ============================================
# VECTOR DATABASE CONFIGURATION
# ============================================

# ChromaDB Settings
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_SEARCH_K=3

# Vector Database Type (future expansion)
VECTOR_DB_TYPE=chromadb
# VECTOR_DB_TYPE=qdrant
# VECTOR_DB_TYPE=milvus

# ============================================
# WEB INTERFACE CONFIGURATION
# ============================================

# Port Configuration
OPENWEBUI_PORT=8000
ADVANCED_PORT=8090
OLLAMA_PORT=11434

# Open WebUI Settings
OPENWEBUI_SECRET_KEY=your-secret-key-change-this
CORS_ALLOW_ORIGIN=*

# Advanced Interface Settings
FLASK_SECRET_KEY=your-flask-secret-key-change-this
FLASK_DEBUG=false

# ============================================
# MODEL PERFORMANCE SETTINGS
# ============================================

# Context Window Size
CONTEXT_WINDOW=16384
# CONTEXT_WINDOW=8192  # Use for faster models or lower memory
# CONTEXT_WINDOW=4096  # Use for very low memory systems

# Generation Parameters
TEMPERATURE=0.3
TOP_P=0.9
REPEAT_PENALTY=1.1

# Request Timeouts (in seconds)
LLM_REQUEST_TIMEOUT=120
EMBEDDING_REQUEST_TIMEOUT=60

# ============================================
# DOCUMENT PROCESSING
# ============================================

# Upload Configuration
MAX_FILE_SIZE_MB=16
ALLOWED_EXTENSIONS=txt,pdf,doc,docx,md
UPLOAD_FOLDER=doccydocs

# Text Processing
MAX_TOKENS_PER_CHUNK=1000
MIN_CHUNK_SIZE=100
OVERLAP_PERCENTAGE=20

# ============================================
# AUDIO/VOICE FEATURES (Optional)
# ============================================

# Twilio Configuration (for voice interface)
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Audio Processing
# ENABLE_VOICE_FEATURES=false
# AUDIO_SAMPLE_RATE=16000

# ============================================
# LOGGING AND MONITORING
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
LOG_FILE=logs/rag_system.log

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# SECURITY SETTINGS
# ============================================

# API Keys (if using external services)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# Access Control
ENABLE_AUTH=false
# JWT_SECRET=your_jwt_secret_here

# HTTPS Configuration (for production)
USE_HTTPS=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Development Mode
DEVELOPMENT_MODE=true

# Hot Reload for Web Interfaces
AUTO_RELOAD=true

# Debug Features
ENABLE_DEBUG_ENDPOINTS=true
VERBOSE_LOGGING=false

# Database Reset (WARNING: Deletes all data)
RESET_VECTOR_DB_ON_START=false

# ============================================
# RESOURCE LIMITS
# ============================================

# Memory Management
MAX_MEMORY_USAGE_GB=8
GARBAGE_COLLECTION_INTERVAL=300

# Concurrent Request Limits
MAX_CONCURRENT_REQUESTS=5
REQUEST_QUEUE_SIZE=10

# ============================================
# BACKUP AND PERSISTENCE
# ============================================

# Automatic Backups
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./backups

# Data Persistence
PERSIST_CHAT_HISTORY=true
CHAT_HISTORY_LIMIT=1000

# ============================================
# INTEGRATION SETTINGS
# ============================================

# External Vector Databases
# QDRANT_URL=http://localhost:6333
# MILVUS_URL=http://localhost:19530

# External APIs
# ENABLE_WEB_SEARCH=false
# SEARCH_API_KEY=your_search_api_key

# Webhook Notifications
# WEBHOOK_URL=https://your-webhook-url.com
# ENABLE_NOTIFICATIONS=false

# ============================================
# CLOUD DEPLOYMENT SETTINGS
# ============================================

# Cloud Provider (aws, gcp, azure, local)
CLOUD_PROVIDER=local

# Container Settings
CONTAINER_MEMORY_LIMIT=4g
CONTAINER_CPU_LIMIT=2

# Load Balancing
ENABLE_LOAD_BALANCING=false
REPLICA_COUNT=1